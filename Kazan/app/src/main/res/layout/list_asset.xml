<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginBottom="12dp"
    android:paddingStart="24dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/lnbg"
    android:paddingLeft="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="10"
    android:background="@drawable/custom_layout_rec">
    <LinearLayout
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/asset_name"
            android:textSize="10pt"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#005bc9"
            android:textStyle="bold"
            android:text="name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/department_name"
            android:textSize="8pt"
            android:textColor="#005bc9"
            android:text="department"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/asset_sn"
            android:textSize="8pt"
            android:textColor="#E2231a"
            android:text="sn"
            android:textStyle="bold"

            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_weight="4"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <ImageView
            android:id="@+id/ic_edit"
            android:padding="4dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/custom_layout_icon_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"/>
        <ImageView
            android:id="@+id/ic_move"
            android:background="@drawable/custom_layout_icon_pink"
            android:padding="4dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_move"/>
        <ImageView
            android:id="@+id/ic_history"
            android:padding="4dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_layout_icon_black"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_history"/>
    </LinearLayout>
</LinearLayout>